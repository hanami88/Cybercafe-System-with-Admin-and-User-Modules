@model List<netmvc.Models.MayTinh>
<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/nguoidung.css?v=@DateTime.Now.Ticks" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Sora:wght@100..800&display=swap"
      rel="stylesheet"
    />
    <title>Login</title>
  </head>
  <body>
    <div class="container">
      <div class="nagavi">
        <h1>Xin Chào</h1>
        @foreach(var i in ViewBag.TaiKhoan){
        @if(ViewBag.ID != null && i.ID == Convert.ToInt32(ViewBag.ID)){
                  <div>Số Dư : @i.Sodu</div>
                  ViewBag.ID=i.ID;
         }
        } 
      </div>
      <h1 class="text">Danh Sách Máy Tính</h1>
      <form action="/Home/Naptien" method="get">
      <input type="hidden" name="ID" value="@ViewBag.ID" />
      <button type="submit" class="them">Nạp tiền</button>
      </form>
      <div class="hettien">@ViewBag.Hettien</div>
      <table>
        <thead>
          <tr>
            <th>Mã máy</th>
            <th>Tên máy</th>
            <th>Trạng thái</th>
            <th>Đơn giá</th>
            <th>Chọn Máy</th>
          </tr>
        </thead>
        <tbody>
          @foreach(var i in @Model){
          <tr>
            <td>@i.ID</td>
            <td>@i.Tenmay</td>
            <td>@i.Trangthai</td>
            <td>@i.dongia</td>
            <td>
             <form action="/Home/ChoiGame" method="post"style="display:inline;">
             <input type="hidden" value="@ViewBag.ID" name="IDnguoichoi">
             <input type="hidden" value="@i.ID" name="IDmaytinh">
              <button type="submit">Chọn</button>
             </form>
            </td>
          </tr>
          }
        </tbody>
      </table>
    </div>
  </body>
</html>
